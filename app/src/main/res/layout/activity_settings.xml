<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@android:color/white"
>

    <TextView
            android:text="Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/someshit"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.54"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="148dp" android:textSize="30sp" android:textColor="@android:color/black"
            tools:ignore="HardcodedText"/>

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/linearLayout"
            android:layout_width="339dp"
            android:layout_height="343dp"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            tools:context=".AppSettingsActivity">

        <!-- Slider switch button -->
        <Switch
                android:id="@+id/switch_button_gps"
                android:layout_width="277dp"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:text="Gps on/off"
                android:textColor="@android:color/black"
                tools:ignore="HardcodedText"
                android:hapticFeedbackEnabled="false"
                android:textSize="18sp"/>


        <!-- dropdown choices -->

        <!--
        <Spinner
                android:id="@+id/mySpinner"
                android:layout_width="match_parent"
                android:spinnerMode="dialog"
                android:layout_height="wrap_content"
                android:text="notifications interval"
        />
        -->

        <!--
        <TextView
                android:id="@+id/spinner_msg"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:padding="20dp"
                android:textColor="@android:color/black"/>

        <Spinner
                android:id="@+id/notifications_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:textColor="@android:color/black"/>
        -->

    </LinearLayout>


    <android.support.constraint.Guideline
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/guideline2" app:layout_constraintGuide_begin="20dp"
            android:orientation="horizontal"/>

</android.support.constraint.ConstraintLayout>

