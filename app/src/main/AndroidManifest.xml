<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.munge.app">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".activities.SettingsActivity"
                android:label="@string/title_activity_settings">
        </activity>
        <activity android:name=".activities.JourneyPlannerActivity">
        </activity>
        <activity android:name=".activities.DeparturesActivity">
        </activity>
        <activity android:name=".activities.DestinationActivity">
        </activity>
        <activity android:name=".activities.TimeActivity">
        </activity>
        <activity android:name=".activities.CountdownActivity">
        </activity>
        <activity android:name=".activities.GpsActivity">
        </activity>
    </application>

    //connect to internet
    <uses-permission android:name="android.permission.INTERNET" />

    //GPS
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

</manifest>